<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Calculator.MainActivity"
    >

    <TableRow>

        <EditText
            android:id="@+id/editT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="5" />
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/one"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/two"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/three"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/plus"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="x"
            android:id="@+id/delete"/>
    </TableRow>

    <TableRow>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/four"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/five"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/six"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/minus"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/clear"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/seven"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/eight"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/nine"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="*"
            android:id="@+id/mult"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="%"
            android:id="@+id/procent"/>
    </TableRow>

    <TableRow>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/zero"/>

        <Button
            android:id="@+id/equally"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:text="=" />

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="/"
            android:id="@+id/div"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text=","
            android:id="@+id/doub"/>

    </TableRow>

</TableLayout>